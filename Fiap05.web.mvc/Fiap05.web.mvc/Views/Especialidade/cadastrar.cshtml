@model Fiap05.web.mvc.Models.Especialidade

@{
    ViewBag.Title = "Cadastrar";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<h2>Cadastro de Especialidades</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(e => e.Nome)
        @Html.TextBoxFor(e => e.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Descricao)
        @Html.TextAreaFor(e => e.Descricao, new { @class = "form-control" })
    </div>
  
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}
