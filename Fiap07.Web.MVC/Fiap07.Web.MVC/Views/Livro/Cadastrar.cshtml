@model Fiap07.Web.MVC.Models.Livro


@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if(TempData["msg"] != null){
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
      <div class="form-group">
          @Html.LabelFor(l => l.Titulo);
          @Html.TextBoxFor(l => l.Titulo, new { @class = "form-control"})
      </div>
      <div class="form-group">
          @Html.LabelFor(l => l.Paginas);
          @Html.TextBoxFor(l => l.Paginas, new { @class = "form-control" })
      </div>
      <div class="form-group">
          @Html.LabelFor(l => l.Editora);
          @Html.DropDownListFor(l => l.EditoraId, 
            ViewBag.editoras as SelectList, 
            "Selecione", new { @class = "form-control"})
      </div>
      <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
}
